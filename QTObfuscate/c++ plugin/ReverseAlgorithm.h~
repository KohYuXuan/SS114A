#include <fstream>
#include <vector>
#include <iostream>
#include <string>
#include <stdio.h>
#include <locale>
#include <map>
#include <set>
#include <algorithm>
#include <cstdlib>
#include <time.h>
#include <sstream>
using namespace std;


class ReverseAlgorithm {

public:

	// load list of randoms strings and thier original names into buffer
	void setUpMapping(const string& s_input, map<string,string>& m_output);

	// convert random strings into thier original names
	void reverseModifyString(string& output, const string& str, const vector<string>&  v_targetWords, map<string,string>& mymap);

	// format file by adding spaces and tabs
	void formatFile(const string& s_input, string& s_output);

	// scan from buffer the contents of file for random words that needs to convert back to original names and add to vector<string>
	void addWordsToList(const string& s_input,vector<string>& v_targetWords);

	// remove from vector<string> list of words not found in MAP files which contains list of random strings and thier original names
	void removeWordsFromList(map<string,string> set_input,vector<string>& v_targetWords);

	// strings in quote will need to be un-hex
	void skipQuote(const string& s_input, int& i_skip, char c_quote = '\"');

	// strings in quote will need to be un-hex
	void convertQuotedHexToString(string& s_input);
	void hexToString(const string& s_input, string& output);
};


